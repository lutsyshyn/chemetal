<% provide(:title, 'User registration') %>
<h1>Users#new</h1>
<p>Register New User</p>
<div class="row">
    <div class="span6 offset3">
        <%=form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object:f.object %>

        <%= f.label :login %>
        <%= f.text_field :login %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Password confirmation" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Register User", class: "btn btn-large btn-primary"%>
        <% end %>
    </div>
</div>